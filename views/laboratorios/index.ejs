<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Laboratorios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Outfit', sans-serif;
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 40px;
        }
        h1 {
            font-weight: 600;
            margin-bottom: 30px;
        }
        table th {
            background-color: #0d6efd;
            color: white;
        }
        .btn-custom {
            font-weight: 500;
        }
    </style>
</head>
<body class="container mt-5">

    <h1 class="mb-4">Listado de Laboratorios</h1>

    <a href="/laboratorios/create" class="btn btn-primary mb-3">Registrar nuevo laboratorio</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Código</th>
                <th>Razón Social</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Email</th>
                <th>Contacto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% laboratorios.forEach(lab => { %>
                <tr>
                    <td><%= lab.CodLab %></td>
                    <td><%= lab.razonSocial %></td>
                    <td><%= lab.direccion %></td>
                    <td><%= lab.telefono %></td>
                    <td><%= lab.email %></td>
                    <td><%= lab.contacto %></td>
                    <td>
                        <a href="/laboratorios/edit/<%= lab.CodLab %>" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/laboratorios/<%= lab.CodLab %>/delete" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('¿Deseas eliminar este laboratorio?')">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</body>
</html>
