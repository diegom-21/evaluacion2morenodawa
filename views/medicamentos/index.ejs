<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Medicamentos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Outfit', sans-serif;
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 40px;
        }
        h1 {
            font-weight: 600;
            margin-bottom: 30px;
        }
        table th {
            background-color: #0d6efd;
            color: white;
        }
        .btn-custom {
            font-weight: 500;
        }
    </style>
</head>
<body class="bg-light p-4">
    <div class="container">
        <h1 class="mb-4">Lista de Medicamentos</h1>
        <a href="/medicamentos/create" class="btn btn-success mb-3">Agregar Nuevo Medicamento</a>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Descripción</th>
                        <th>Fecha de Fabricación</th>
                        <th>Fecha de Vencimiento</th>
                        <th>Presentacion</th>
                        <th>Stock</th>
                        <th>Precio por Unidad</th>
                        <th>Precio Presentacion</th>
                        <th>Tipo Medicamento</th>
                        <th>Marca</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% medicamentos.forEach(medicamento => { %>
                        <tr>
                            <td><%= medicamento.descripcionMed %></td>
                            <td><%= medicamento.fechaFabricacion.toISOString().split('T')[0] %></td>
                            <td><%= medicamento.fechaVencimiento.toISOString().split('T')[0] %></td>
                            <td><%= medicamento.Presentacion %></td>
                            <td><%= medicamento.stock %></td>
                            <td><%= medicamento.precioVentaUni %></td>
                            <td><%= medicamento.precioVentaPres %></td>
                            <td><%= medicamento.tipoMedic ? medicamento.tipoMedic.descripcion : 'N/A' %></td>
                            <td><%= medicamento.Marca %></td>
                            <td>
                                <a href="/medicamentos/edit/<%= medicamento.CodMedicamento %>" class="btn btn-warning btn-sm me-1">Editar</a>
                                <form action="/medicamentos/<%= medicamento.CodMedicamento %>?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('¿Deseas eliminar este medicamento?')">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
