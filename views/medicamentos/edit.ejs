<style>
    body {
        font-family: 'Outfit', sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        margin-top: 40px;
    }

    h1 {
        font-weight: 600;
        margin-bottom: 30px;
    }

    table th {
        background-color: #0d6efd;
        color: white;
    }

    .btn-custom {
        font-weight: 500;
    }
</style>

<body class="bg-light p-4">
    <div class="container">
        <h1 class="mb-4">Editar Medicamento</h1>
        <form action="/medicamentos/actualizar/<%= medicamento.CodMedicamento %>" method="POST" class="row g-3">
            <div class="col-md-6">
                <label for="descripcionMed" class="form-label">Descripci贸n</label>
                <input type="text" class="form-control" id="descripcionMed" name="descripcionMed"
                    value="<%= medicamento.descripcionMed %>" required>
            </div>
            <div class="col-md-6">
                <label for="Marca" class="form-label">Marca</label>
                <input type="text" class="form-control" id="Marca" name="Marca" value="<%= medicamento.Marca %>"
                    required>
            </div>
            <div class="col-md-6">
                <label for="fechaFabricacion" class="form-label">Fecha de Fabricaci贸n</label>
                <input type="date" class="form-control" id="fechaFabricacion" name="fechaFabricacion"
                    value="<%= medicamento.fechaFabricacion.toISOString().split('T')[0] %>" required>
            </div>
            <div class="col-md-6">
                <label for="fechaVencimiento" class="form-label">Fecha de Vencimiento</label>
                <input type="date" class="form-control" id="fechaVencimiento" name="fechaVencimiento"
                    value="<%= medicamento.fechaVencimiento.toISOString().split('T')[0] %>" required>
            </div>
            <div class="col-md-6">
                <label for="Presentacion" class="form-label">Presentaci贸n</label>
                <input type="text" class="form-control" id="Presentacion" name="Presentacion"
                    value="<%= medicamento.Presentacion %>" required>
            </div>
            <div class="col-md-6">
                <label for="stock" class="form-label">Stock</label>
                <input type="number" class="form-control" id="stock" name="stock" value="<%= medicamento.stock %>"
                    required>
            </div>
            <div class="col-md-6">
                <label for="precioVentaUni" class="form-label">Precio por Unidad</label>
                <input type="number" step="0.01" class="form-control" id="precioVentaUni" name="precioVentaUni"
                    value="<%= medicamento.precioVentaUni %>" required>
            </div>
            <div class="col-md-6">
                <label for="precioVentaPres" class="form-label">Precio por Presentaci贸n</label>
                <input type="number" step="0.01" class="form-control" id="precioVentaPres" name="precioVentaPres"
                    value="<%= medicamento.precioVentaPres %>" required>
            </div>
            <div class="col-md-6">
                <label for="CodTipoMed" class="form-label">Tipo de Medicamento</label>
                <select class="form-select" name="CodTipoMed" id="CodTipoMed" required>
                    <% tiposMedicamento.forEach(tipo=> { %>
                        <option value="<%= tipo.CodTipoMed %>" <%=tipo.CodTipoMed===medicamento.CodTipoMed ? 'selected'
                            : '' %>><%= tipo.descripcion %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Actualizar Medicamento</button>
                <a href="/medicamentos" class="btn btn-secondary ms-2">Volver a la lista</a>
            </div>
        </form>
    </div>
</body>

</html>