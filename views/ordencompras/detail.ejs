<!-- views/ordencompras/detail.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detalle Orden de Compra</title>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600&display=swap" rel="stylesheet">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
        font-family: 'Outfit', sans-serif;
        background-color: #f8f9fa;
    }
    .container {
        margin-top: 40px;
    }
    h1 {
        font-weight: 600;
        margin-bottom: 30px;
    }
    table th {
        background-color: #0d6efd;
        color: white;
    }
    .btn-custom {
        font-weight: 500;
    }
</style>
</head>
<body>
  <div class="container mt-5">
    <h1>Detalle de Orden de Compra</h1>
    <ul class="list-group">
      <li class="list-group-item"><strong>Número de Orden:</strong> <%= orden.NroOrdenC %></li>
      <li class="list-group-item"><strong>Fecha de Emisión:</strong> <%= orden.fechaEmision %></li>
      <li class="list-group-item"><strong>Situación:</strong> <%= orden.Situacion %></li>
      <li class="list-group-item"><strong>Total:</strong> <%= orden.Total %></li>
      <li class="list-group-item"><strong>Laboratorio:</strong> <%= orden.laboratorio.Nombre %></li>
    </ul>
    <a href="/ordencompras" class="btn btn-secondary mt-3">Volver</a>
  </div>
</body>
</html>
