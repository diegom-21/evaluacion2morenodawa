<!-- views/ordencompras/edit.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editar Orden de Compra</title>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
        font-family: 'Outfit', sans-serif;
        background-color: #f8f9fa;
    }
    .container {
        margin-top: 40px;
    }
    h1 {
        font-weight: 600;
        margin-bottom: 30px;
    }
    table th {
        background-color: #0d6efd;
        color: white;
    }
    .btn-custom {
        font-weight: 500;
    }
</style>
</head>
<body>
  <div class="container mt-5">
    <h1>Editar Orden de Compra</h1>
    <form action="/ordencompras/edit/<%= orden.NroOrdenC %>" method="POST">
      <div class="mb-3">
        <label for="fechaEmision" class="form-label">Fecha de Emisión</label>
        <input type="datetime-local" class="form-control" id="fechaEmision" name="fechaEmision" value="<%= orden.fechaEmision.toISOString().slice(0,16) %>" required>
      </div>
      <div class="mb-3">
        <label for="Situacion" class="form-label">Situación</label>
        <input type="text" class="form-control" id="Situacion" name="Situacion" value="<%= orden.Situacion %>" required>
      </div>
      <div class="mb-3">
        <label for="Total" class="form-label">Total</label>
        <input type="number" class="form-control" id="Total" name="Total" value="<%= orden.Total %>" step="0.01" required>
      </div>
      <div class="mb-3">
        <label for="CodLab" class="form-label">Laboratorio</label>
        <select class="form-control" id="CodLab" name="CodLab" required>
          <% laboratorios.forEach(laboratorio => { %>
            <option value="<%= laboratorio.CodLab %>" <%= laboratorio.CodLab === orden.CodLab ? 'selected' : '' %>><%= laboratorio.razonSocial %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label for="NrofacturaProv" class="form-label">Número de Factura</label>
        <input type="text" class="form-control" id="NrofacturaProv" name="NrofacturaProv" value="<%= orden.NrofacturaProv %>" required>
      </div>
      <button type="submit" class="btn btn-primary">Actualizar</button>
    </form>
  </div>
</body>
</html>
